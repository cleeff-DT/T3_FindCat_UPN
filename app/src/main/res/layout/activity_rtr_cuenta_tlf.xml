<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.RtrCuentaTlfActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#ECECEC">

        <TextView
            android:id="@+id/txtRtrTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reactivar Cuenta"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

        <ImageView
            android:id="@+id/emoticon_cat"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/emoticon_cat"
            android:layout_marginTop="40dp" />

        <TextView
            android:id="@+id/txtNroTlf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número Telefónico:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="#000000"
            android:layout_marginTop="30dp" />

        <EditText
            android:id="@+id/txtRcpTelefono"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Ingrese su número"
            android:textSize="16sp"
            android:textColor="#000000"
            android:backgroundTint="#FFFFFF"
            android:textColorHint="#999999"
            android:fontFamily="sans-serif"
            android:padding="12dp"
            android:layout_marginTop="5dp"
            android:elevation="2dp" />

        <Button
            android:id="@+id/btnValidarTlf"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Validar número"
            android:backgroundTint="@color/naranja"
            android:textColor="@color/marron"
            android:textSize="10sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:padding="10dp"
            android:elevation="4dp"
            android:minHeight="48dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/txtCodTlfSMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese el código de verificación (SMS): "
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="#000000"
            android:layout_marginTop="30dp" />

        <EditText
            android:id="@+id/txtRcpCodigoTlf"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Ingrese el código"
            android:textSize="16sp"
            android:textColor="#000000"
            android:backgroundTint="#FFFFFF"
            android:textColorHint="#999999"
            android:fontFamily="sans-serif"
            android:padding="12dp"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:elevation="2dp" />

        <Button
            android:id="@+id/btnContinuarTlf"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Continuar"
            android:backgroundTint="@color/naranja"
            android:textColor="@color/marron"
            android:textSize="10sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:padding="10dp"
            android:elevation="4dp"
            android:minHeight="48dp"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/btnCancelarTlf"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:backgroundTint="@color/marron"
            android:padding="12dp"
            android:elevation="4dp"
            android:minHeight="48dp"
            android:layout_marginTop="30dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>